<!DOCTYPE html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>bettit -</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="icon" type="image/png" href="/favicon.ico">

		<!-- Bootstrap styles -->
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.min.css" rel="stylesheet">

		<style>
			body {
				padding-top: 60px; /* make the container go to the bottom of the topbar */
				padding-bottom: 60px; /* for footer */
			}
		</style>
		<style type="text/css">
			#footer {
				position: fixed;
				bottom: 0;
				left: 0;
				right: 0;
				height: 60px;
				width: 100%;
				background-color: #f5f5f5;
			}

			.scrollable {
				height: 500px;
				overflow: scroll;
			}

			.container .credit {
				margin: 20px 0;
			}

			#thread_content hr {
				border-color: #E2E2E2;
			}

			#thread_content table, th, td {
				border: 1px solid black;
			}
			.badge{
				margin: 0px 0px 0px 20px;
			}
		</style>

		<!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
		<script src="/js/html5shiv.js"></script>
		<![endif]-->
	</head>
	<body>
		<!-- NAV BAR -->
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">bettit</a>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li>
							<a href="/">Home</a>
						</li>
						<li>
							<a href="/about.html">About</a>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<!-- CONTENT -->
		<div class="container">
			<div id="title_row" class="row-fluid">
				<div class="col-lg-12">
					<h3><span id="thread_title">Loading...</span></h3>
				</div>
			</div>
			<div class="row-fluid">
				<div id="events_div" class="col-lg-6">
					<% if(mod) { %>
					<span id="add_event_span"></span>
					<% } %>
					<span id="events"></span>
				</div>
				<div class="col-lg-6">
					<div class="panel panel-default">
						<div id="thread_content" class="panel-body scrollable"></div>
					</div>
				</div>
			</div>
		</div>

		<!-- FLOATING FOOTER-->
		<div id="footer">
			<div align="center" class="container">
				<p id="user_info" class="credit">
					<h4> <a href="/u/<%= user %>"><%= user %></a> | &sect;<span id="user_money"></span></h4>
				</p>
			</div>
		</div>

		<!-- BOOTSTRAP JAVASCRIPT -->
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>

		<!-- BETTIT JAVASCRIPT -->
		<script src="/socket.io/socket.io.js"></script>
		<script>
			window.mod = <%= mod %>;
			window.user = '<%= user %>';
			window.threadID = '<%= threadID %>';
		</script>
		<script src="/js/bettit.js"></script>

		<!-- Google Analytics Code -->
		<script>
			( function(b, o, i, l, e, r) {
					b.GoogleAnalyticsObject = l;
					b[l] || (b[l] = function() {
